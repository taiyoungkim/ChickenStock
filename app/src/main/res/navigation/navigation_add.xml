<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add"
    app:startDestination="@id/addFragment">

    <fragment
        android:id="@+id/addFragment"
        android:name="com.ktyoung.chickenstock.view.AddFragment"
        android:label="내 뉴스 설정"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_addNewsFragment"
            app:destination="@id/addNewsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword1"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword2"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword3"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/addNewsFragment"
        android:name="com.ktyoung.chickenstock.view.AddNewsFragment"
        android:label="" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword1"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword2"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="keyword3"
            app:argType="string"
            app:nullable="true" />
    </fragment>


</navigation>